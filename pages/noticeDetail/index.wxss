page {
  background-color: #f0f0f0;
}

.container {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  box-sizing: border-box;
}

.header {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #131313;
}

.header .name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 50rpx;
}

.header .date {
  font-size: 22rpx;
  line-height: 32rpx;
  margin-top: 5rpx;
  color: #707070;
}

.content {
  background-color: #fff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #444;
  padding: 20rpx;
}

.imageList {
  display: flex;
  flex-wrap: wrap;
}
.imageList .item {
  margin-top: 20rpx;
}

.imageList .item image {
  width: 300rpx;
  height: 200rpx;
}
