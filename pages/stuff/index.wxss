page {
  background-color: #f0f0f0;
}

.container {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  box-sizing: border-box;
}

.field {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #444;
}

.dataPicker {
  flex: 1;
  text-align: right;
}

.item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #E6E6E6;
  font-size: 32rpx;
}

.item .icon {
  width: 64rpx;
  height: 64rpx;
  margin: 0 20rpx;
}

.item .title {
  height: 120rpx;
  display: flex;
  flex-direction: column;
}

.item .name {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 22rpx;
}

.item .date {
  font-size: 22rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-top: 5rpx;
  color: #707070;
}