page {
  background-color: #f0f0f0;
}

.container {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  box-sizing: border-box;
}

.header {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #444;
}

.header text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #E6E6E6;
  font-size: 32rpx;
}
.item .title {
  display: flex;
  align-items: center;
}

.item .icon-cover {
  width: 64rpx;
  height: 64rpx;
  margin: 0 20rpx;
}

.item .icon-cover-view {
  display: flex;
  align-items: center;
}


.item .icon-playing {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

.player {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: #fff;
  font-size: 32rpx;
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
}

.player .player-process {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  border-bottom: 1rpx solid #f0f0f0;
}
.player-timer {
  padding: 0 20rpx;
  font-size: 24rpx;
}
.player-slider {
  flex: 1
}
.player .player-main {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

.player-main .cover {
  display: block;
  margin: 0 20rpx;
  width: 84rpx;
  height: 84rpx;
  border-radius: 84rpx;
}

.player-main .title {
  flex: 1;
  overflow: hidden;
}

.player-main .title text {
  display: block;
  white-space: nowrap;
  letter-spacing: 0;
  animation: marquee 10s linear infinite;
}

.player-main .operation {
  width: 260rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon-view {
  display: flex;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
}

.player .icon-play {
  width: 60rpx;
  height: 60rpx;
}

.player .icon-cycle {
  width:  40rpx;
  height: 32rpx;
}

.player .icon-operation {
  width: 20rpx;
  height: 24rpx;
}

.player .name {
  flex: 1;
  margin-left: 20rpx;
}

@keyframes marquee {
  0% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
  100% {
    -webkit-transform: translateX(-100%);
    transform: translateX(-100%);
  }
}
