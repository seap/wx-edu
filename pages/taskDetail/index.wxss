page {
  background-color: #f0f0f0;
}

.content {
  background-color: #fff;
  font-size: 28rpx;
  color: #444;
  padding: 20rpx;
}

.operation {
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 32rpx;
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
}

.operation .operation-button {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.operation .operation-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}

.operation .operation-record {
  color: #fff;
  background-color: #1aad19;
}
.operation .operation-stop {
  color: #d81e06;
}

.operation .operation-save {
  background-color: #fff;
}

.voice-header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #E6E6E6;
}

.voice-header-title {
  margin:0 20rpx;
}

.voice-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  color: #707070;
  font-size: 28rpx;
}

.voice-item .voice-item-icon {
  display: flex;
  align-items: center;
}

.voice-item .voice-item-icon image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

.voice-item .voice-item-name {
  flex: 1;
}

.text-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.text-item text {
  min-width: 130rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}