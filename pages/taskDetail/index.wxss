page {
  background-color: #f0f0f0;
}

.content {
  background-color: #fff;
  font-size: 28rpx;
  color: #444;
  padding: 20rpx;
}

.task-placeholder {
  margin-top: 120rpx;
}

.operation {
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 32rpx;
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
}

.operation .operation-button {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.operation .operation-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}

.operation .operation-record {
  color: #fff;
  background-color: #1aad19;
}
.operation .operation-stop {
  color: #d81e06;
}

.operation .operation-save {
  background-color: #fff;
}

.text-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
}

.text-item-header {
  margin-top: 20rpx;
}

.text-item .text-item-icon {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.text-item .text-item-icon image{
  width: 32rpx;
  height: 32rpx;
  margin: 0 20rpx;
}

.text-item .text-item-name {
  flex: 1;
}

.text-item .text-item-value {
  flex: 1;
  text-align: right;
  margin: 0 20rpx;
}

.text-item text {
  min-width: 130rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-item .text-item-result {
  color: #1aad19;
}
